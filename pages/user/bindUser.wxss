/* pages/user/bindUser.wxss */

.conta{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
}

.top{
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;

}

.top > .nickName{
  color: rgb(2, 1, 1);
  margin-top: 20rpx;
  font-weight:bold;
  font-size: 40rpx;
}

.top > .biu{
  border-radius:50%;
  width:150px;
  height:150px;
  display:inline-block;
  text-align:center;
  line-height:200px;
}

.top > .other{
  margin-top: 20rpx;
  color: rgb(134, 133, 133);
  font-size: 35rpx;
}

.inbox{
  display:flex;
  border:none;
  align-items: center;
  border-bottom: 2px solid #eee;
  padding-bottom: 5px;
  margin: 10px 0 0 10px;
}

.inbox > .label{
  color: rgb(134, 133, 133);
  font-size: 28rpx;
}

.form{
  width: 100%;
}

.top > image{
  display:inline-block;
  margin: 5px auto;
  width:100px;
  height:100px;
  border-radius:100px;
  -webkit-border-radius:100px;
  -moz-border-radius:100px;
  overflow:hidden;
}

.button{
  margin-top: 50px;
  width: 100%;
  background-color: #4bc0a9;
  color: #fff;
  height: 40px;
  display:flex;
  border:none;
  align-items: center;
  justify-content:center;
}

.gender{
  margin: 10rpx;
}

.pheonButon{
  background-color: #4bc0a9;
  color: #fff;

}
.pheonButon > .text{
  font-size: 25rpx;
  font-weight: normal;
  padding: 7px;
}